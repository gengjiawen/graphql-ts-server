{
  "name": "graphql-ts-server",
  "version": "1.0.1",
  "description": "graphql-ts-server",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "build": "rimraf dist && cross-env NODE_ENV=development tsc",
    "test": "cross-env NODE_ENV=test TS_NODE_FILES=true jest --forceExit"
  },
  "dependencies": {
    "@koa/cors": "3.0.0",
    "apollo-server": "2.9.3",
    "apollo-server-koa": "2.9.3",
    "bcryptjs": "2.4.3",
    "class-validator": "0.10.0",
    "cross-env": "6.0.0",
    "graphql": "14.5.6",
    "ioredis": "4.14.1",
    "koa-jwt": "3.6.0",
    "nodemailer": "6.3.0",
    "pg": "7.12.1",
    "reflect-metadata": "0.1.13",
    "type-graphql": "^0.17.5",
    "typeorm": "0.2.19",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/ioredis": "4.0.17",
    "@types/jest": "24.0.18",
    "@types/jsonwebtoken": "8.3.3",
    "@types/kcors": "2.2.3",
    "@types/koa": "2.0.49",
    "@types/koa-router": "7.0.42",
    "@types/node": "12.7.5",
    "@types/nodemailer": "6.2.1",
    "@types/uuid": "3.4.5",
    "axios": "0.19.0",
    "jest": "24.9",
    "prettier": "1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "24.1.0",
    "ts-node-dev": "1.0.0-pre.43",
    "typescript": "3.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./src/jest/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
