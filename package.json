{
  "name": "graphql-ts-server",
  "version": "1.0.1",
  "description": "graphql-ts-server",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "rimraf dist && cross-env NODE_ENV=development tsc",
    "test": "cross-env NODE_ENV=test jest --forceExit"
  },
  "dependencies": {
    "@koa/cors": "3.0.0",
    "apollo-server-koa": "2.14.1",
    "bcryptjs": "2.4.3",
    "class-validator": "0.12.1",
    "cross-env": "7.0.2",
    "graphql": "15.0.0",
    "ioredis": "4.17.3",
    "koa-compress": "^4.0.1",
    "koa-jwt": "3.6.0",
    "nodemailer": "6.4.8",
    "pg": "8.2.1",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.0.0-rc.1",
    "typeorm": "0.2.24",
    "uuid": "8.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/ioredis": "4.0.18",
    "@types/jest": "25.2.3",
    "@types/jsonwebtoken": "8.3.4",
    "@types/kcors": "2.2.3",
    "@types/koa-router": "7.0.42",
    "@types/node": "14.0.5",
    "@types/nodemailer": "6.2.1",
    "@types/uuid": "8.0.0",
    "axios": "0.19.2",
    "jest": "25.5.3",
    "nodemon": "^2.0.3",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "25.5.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./src/jest/callSetup.js",
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
