{
  "name": "graphql-ts-server",
  "version": "0.0.1",
  "description": "graphql-ts-server",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "build": "rimraf dist && cross-env NODE_ENV=development tsc",
    "test": "cross-env NODE_ENV=test TS_NODE_FILES=true jest --forceExit",
    "gen-schema-types": "ts-node scripts/createTypes.ts"
  },
  "dependencies": {
    "@gql2ts/from-schema": "1.8.2",
    "apollo-server": "2.9.3",
    "apollo-server-koa": "2.9.3",
    "bcryptjs": "2.4.3",
    "cross-env": "5.2.0",
    "fs-extra": "7.0.0",
    "graphql": "14.5.4",
    "graphql-import": "0.6.0",
    "ioredis": "3.2.2",
    "koa-jwt": "3.5.0",
    "nodemailer": "6.3.0",
    "pg": "7.12.1",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.18",
    "uuid": "^3.3.3",
    "yup": "0.26.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "@types/ioredis": "3.2.14",
    "@types/jest": "23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/kcors": "2.2.2",
    "@types/koa": "2.0.49",
    "@types/koa-router": "7.0.31",
    "@koa/cors": "2.2.2",
    "@types/node": "12.7.5",
    "@types/nodemailer": "6.2.1",
    "@types/uuid": "3.4.3",
    "@types/yup": "0.24.7",
    "axios": "0.19.0",
    "gql2ts": "1.8.2",
    "jest": "23.5.0",
    "prettier": "1.18.2",
    "rimraf": "^2.6.2",
    "ts-jest": "23.10.5",
    "ts-node-dev": "1.0.0-pre.42",
    "typescript": "3.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./src/jest/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
